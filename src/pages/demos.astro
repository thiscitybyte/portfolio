---
// Components
// - Layout
import Layout from '../layouts/LayoutDesign.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'

// - UI
import { Image } from 'astro:assets'
import Card from '../components/ui/cards/partials/Card.astro'
import CardBody from '../components/ui/cards/partials/CardBody.astro'
import CaseStudyCard from '../components/ui/cards/CaseStudyCard.astro'

// Content
// - SEO
const SEO = {
	title: 'Milo â€“ Personal Resume & Portfolio Theme Built with Astro',
	description:
		'Milo is a fast, elegant, and accessible Astro theme built to showcase your resume, projects, and skills. Ideal for creating a personal portfolio or professional profile site.'
}

// - Data
import demoData from '../data/json-files/demoData.json'
---

<Layout title={SEO.title} description={SEO.description} navigation="sticky" footer={false}>
	<!-- Intro -->
	<Section id="intro">
		<Row>
			<Col span="2" />
			<Col span="10" spanMobile="4">
				<div class="animate">
					<h1 class="mt-0">Demos</h1>
					<p>
						Explore our collection of demos to see how our theme can be used to create a modern and
						professional portfolio or resume website.
					</p>
				</div>
			</Col>
		</Row>
	</Section>

	<!-- Home Demos-->
	<Section id="home" classes="!overflow-visible">
		<Row>
			<Col span="2" spanMobile="4" classes="h-full">
				<h2 class="sticky top-4 lg:text-right">Home</h2>
			</Col>
			<Col span="10" spanMobile="4">
				<div class="grid grid-cols-1 gap-9 lg:grid-cols-3">
					{
						demoData.homepage.map((item: any) => (
							<Card>
								{item.image && (
									<a href={item.link} class="relative">
										<Image
											src={item.image}
											alt={item.title}
											width={600}
											height={400}
											class="w-full"
										/>
									</a>
								)}
								<CardBody classes="!px-0 !pb-4 text-neutral-600 dark:text-neutral-400 [.mode-dark_&]:text-neutral-400 text-base">
									<h3 class="mb-4 text-lg text-neutral-900 transition-colors duration-300 hover:text-primary-500 dark:text-white dark:hover:text-secondary-500 [&_a]:text-inherit">
										<a
											href={item.link}
											class="[.mode-dark_&]:!text-white [.mode-dark_&]:hover:!text-secondary-500"
										>
											{item.title}
										</a>
									</h3>
									<p>{item.description}</p>
								</CardBody>
							</Card>
						))
					}
				</div>
			</Col>
		</Row>
	</Section>

	<Section id="case-studies" classes="!overflow-visible">
		<Row>
			<Col span="2" spanMobile="4" classes="h-full">
				<h2 class="sticky top-4 lg:text-right">Case Studies</h2>
			</Col>
			<Col span="10" spanMobile="4">
				<div class="grid grid-cols-1 gap-9 lg:grid-cols-3">
					{
						demoData.caseStudies.map((item: any) => (
							<Card>
								{item.image && (
									<a href={item.link} class="relative">
										<Image
											src={item.image}
											alt={item.title}
											width={600}
											height={400}
											class="w-full"
										/>
									</a>
								)}
								<CardBody classes="!px-0 !pb-4 text-neutral-600 dark:text-neutral-400 [.mode-dark_&]:text-neutral-400 text-base">
									<h3 class="mb-4 text-lg text-neutral-900 transition-colors duration-300 hover:text-primary-500 dark:text-white dark:hover:text-secondary-500 [&_a]:text-inherit">
										<a
											href={item.link}
											class="[.mode-dark_&]:!text-white [.mode-dark_&]:hover:!text-secondary-500"
										>
											{item.title}
										</a>
									</h3>
									<p>{item.description}</p>
								</CardBody>
							</Card>
						))
					}
				</div>
			</Col>
		</Row>
	</Section>
</Layout>
