---
// List
// ------------
// Description: the list component is a ui element that displays a list of items in a vertical order.
// Properties:
// - Type: the type of the list (basic, checklist)
// - ListItems: the list items of the list
// - classes: additional classes
// - listColor: the color of the marker (primary, neutral, white)

// Components
// - UI
import { Icon } from 'astro-icon/components'

// Props
type Props = {
	type?: 'basic' | 'checklist' | 'none'
	listItems: Array<any>
	classes?: string
	listColor?: 'primary' | 'neutral'
}
const { type = 'basic', listColor = 'neutral', listItems, classes } = Astro.props
---

<ul
	class:list={[
		'list',
		{ ['list--' + `${type}`]: type },
		{ ['list--' + `${listColor}`]: listColor },
		{ [`${classes}`]: classes }
	]}
>
	{
		listItems.map((item) => (
			<li>
				{type === 'checklist' && <Icon name="check-circle" />} {item.listItem}
			</li>
		))
	}
</ul>

<style>
	.list li {
		@apply mb-2 ml-4 list-disc text-neutral-500 dark:text-neutral-400;
	}
	.list--none {
		@apply [&_li]:list-none;
	}
	.list--checklist {
		@apply [&_li]:flex [&_li]:items-start [&_li]:gap-2 [&_svg]:h-6 [&_svg]:w-6 [&_svg]:shrink-0 [&_svg]:p-1 [&_svg]:text-primary-500;
	}
	.list--primary {
		@apply [&.list--checklist_svg]:text-primary-500 [&_li]:marker:text-primary-500;
	}
	.list--neutral {
		@apply [&.list--checklist_svg]:text-neutral-600 [&.list--checklist_svg]:dark:text-white [&_li]:marker:text-neutral-600 [&_li]:dark:marker:text-white;
	}
</style>
