---
interface Props {
  id: string;
  title?: string;
  className?: string;
}

const { id, title = 'Vimeo video player', className = '' } = Astro.props;
---

<div class={`aspect-video w-full ${className}`}>
  <iframe
    src={`https://player.vimeo.com/video/${id}`}
    width="100%"
    height="100%"
    frameborder="0"
    allow="autoplay; fullscreen; picture-in-picture"
    allowfullscreen
    title={title}
    class="w-full h-full"
  ></iframe>
</div>