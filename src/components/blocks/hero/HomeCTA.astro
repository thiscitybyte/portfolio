---
// Home page CTA Section
// ------------
// Description: The main hero section for the home page, featuring a large heading, contact information,
// and a theme-aware hero image that changes based on light/dark mode.
//
// Note: This component uses the theme-image ID which is handled by ThemeScripts.astro for dark/light mode switching.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import { Image } from 'astro:assets'

// Content
// - Props
type Props = {
	imageSource: string
}
const { imageSource } = Astro.props
---

<Section id="intro" classes="!overflow-visible !pt-[240px]">
	<Row>
		<Col span="2" />
		<Col span="10">
			<Image
				src={imageSource}
				alt="Milo Astro Theme"
				width={500}
				height={500}
				class="absolute -left-40 -top-40 md:-left-60 md:-top-48"
				format="webp"
			/>
			<div class="relative z-10 text-left">
				<h1 class="w-initial text-left text-4xl leading-[60px] md:text-9xl md:leading-[128px]">
					Iâ€™m Milo <br /> I build <br /> for the web.
				</h1>

				<div
					class="flex flex-row flex-wrap gap-6 font-headingsPrimary text-base text-neutral-600 lg:flex-nowrap dark:text-neutral-300 [&_a]:text-neutral-600 [&_a]:transition-colors [&_a]:duration-300 dark:[&_a]:text-neutral-300"
				>
					<a href="mailto:milo@studio.com">milo@studio.com</a>
					<a href="tel:+13235550198">+1 (323) 555-0198</a>
					<span>Remote Friendly</span>
					<a href="#">@milo.design</a>
				</div>
			</div>
		</Col>
	</Row>
</Section>
