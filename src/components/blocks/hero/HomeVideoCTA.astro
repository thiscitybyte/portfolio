---
// Home page CTA Section
// ------------
// Description: The main hero section for the home page, featuring a large heading, contact information,
// and a theme-aware video background that changes based on light/dark mode.
//
// Note: This component uses the theme-video and video-source IDs which are handled by ThemeScripts.astro
// for dark/light mode video switching.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Content
// - Props
type Props = {
	videoSource: string
}
const { videoSource } = Astro.props
---

<Section id="intro" classes="!overflow-visible !pt-[240px]">
	<Row>
		<Col span="2" />
		<Col span="10">
			<video
				autoplay
				muted
				class="absolute -left-40 -top-56 size-80 rounded-full object-cover md:-left-72 md:-top-48 md:size-[31.25rem]"
			>
				<source src={videoSource} type="video/mp4" />
			</video>

			<div class="relative z-10 text-left">
				<h1 class="w-initial text-left text-4xl leading-[60px] md:text-8xl md:leading-[120px]">
					Iâ€™m Milo <br /> I build <br /> for the web.
				</h1>

				<div
					class="flex flex-row flex-wrap gap-6 font-headingsPrimary text-base text-neutral-600 lg:flex-nowrap dark:text-neutral-300 [&_a]:text-neutral-600 [&_a]:transition-colors [&_a]:duration-300 dark:[&_a]:text-neutral-300"
				>
					<a href="mailto:milo@studio.com">milo@studio.com</a>
					<a href="tel:+13235550198">+1 (323) 555-0198</a>
					<span>Remote Friendly</span>
					<a href="#">@milo.design</a>
				</div>
			</div>
		</Col>
	</Row>
</Section>
