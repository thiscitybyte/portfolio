---
// Home page CTA Section
// ------------
// Description: The main hero section for the home page, featuring a large heading, contact information,
// and a theme-aware video background that changes based on light/dark mode.
//
// Note: This component uses the theme-video and video-source IDs which are handled by ThemeScripts.astro
// for dark/light mode video switching.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'

// Content
// - Props
type Props = {
	videoSource: string
	headingClasses?: string
	linksClasses?: string
}
const { videoSource, headingClasses, linksClasses } = Astro.props
---

<Section id="intro" classes="!overflow-visible !pt-[240px]">
	<Row>
		<Col span="2" />
		<Col span="10" spanMobile="4">
			<video
				autoplay
				muted
				class="absolute -left-40 -top-56 size-80 rounded-full object-cover md:-left-72 md:-top-48 md:size-[31.25rem]"
			>
				<source src={videoSource} type="video/mp4" />
			</video>

			<div class="relative z-10">
				<h1 class:list={['max-w-3xl', { [`${headingClasses}`]: headingClasses }]}>
					Hi, <br />Iâ€™m Milo <br />& I design.
				</h1>

				<ul class:list={['horizontal-list row', { [`${linksClasses}`]: linksClasses }]}>
					<li><a href="mailto:milo@studio.com">milo@studio.com</a></li>
					<li><a href="tel:+13235550198">+1 (323) 555-0198</a></li>
					<li>Remote Friendly</li>
					<li><a href="#">@milo.design</a></li>
				</ul>
			</div>
		</Col>
	</Row>
</Section>
